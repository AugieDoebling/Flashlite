<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context="firstapp.About"
    android:background="@drawable/offwhite">

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/imageButton"
        android:src="@drawable/x"
        android:background="@drawable/transparent"
        android:onClick="xOut"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView3"
        android:src="@drawable/ooqle"
        android:onClick="goToOoqle"
        android:layout_above="@+id/email"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/email"
        android:src="@drawable/email2"
        android:background="@drawable/transparent"
        android:longClickable="true"
        android:onClick="sendEmail"
        android:contentDescription="@string/strobedis"
        android:layout_alignBottom="@+id/imageButton2"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/imageButton2"
        android:src="@drawable/share2"
        android:background="@drawable/transparent"
        android:longClickable="true"
        android:onClick="shareApp"
        android:contentDescription="@string/strobedis"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/imageButton" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/imageView4"
        android:src="@drawable/xxhdpiicone"
        android:layout_below="@+id/imageButton"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:id="@+id/imageView5"
        android:src="@drawable/text"
        android:layout_above="@+id/imageView3"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
