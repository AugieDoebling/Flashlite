<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    tools:context=".TestActivity"
    android:background="@drawable/track">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/whiteline3"
        android:layout_gravity="center"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"/>

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/switch1"
        android:enabled="true"
        android:checked="false"
        android:thumb="@drawable/switch6"
        android:maxLength="40"
        android:rotation="-90"
        android:track="@drawable/transparent"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/transparent"
        android:contentDescription="@string/switchdis"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:src="@drawable/header"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>

    <ImageButton
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:id="@+id/strobeButton"
        android:src="@drawable/strobeoff"
        android:background="@drawable/transparent"
        android:longClickable="true"
        android:onClick="strobeButton"
        android:contentDescription="@string/strobedis"
        android:layout_below="@+id/imageView2"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/question"
        android:src="@drawable/question"
        android:background="@drawable/transparent"
        android:layout_below="@+id/imageView2"
        android:layout_alignParentEnd="true"
        android:onClick="questionMark" />

    <ImageButton
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:id="@+id/partyButton"
        android:src="@drawable/strobeoff"
        android:background="@drawable/transparent"
        android:longClickable="true"
        android:onClick="partyButton"
        android:contentDescription="@string/strobedis"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
